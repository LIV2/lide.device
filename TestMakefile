PROJECT=liv2ride
CC=m68k-amigaos-gcc
CFLAGS=-mcrt=clib2 -mcpu=68000 -Wall -Wno-multichar -Wno-pointer-sign -Wno-attributes  -Wno-unused-value -s -Os -fomit-frame-pointer
LDFLAGS=-lamiga -lgcc -lc
AS=m68k-amigaos-as

ifdef DEBUG
CFLAGS+= -DDEBUG=$(DEBUG)
LDFLAGS+= -ldebug
.PHONY: $(PROJECT)
endif

ifdef NOTIMER
CFLAGS+= -DNOTIMER=1
.PHONY: $(PROJECT)
endif

ifdef SLOWXFER
CFLAGS+= -DSLOWXFER=1
.PHONY: $(PROJECT)
endif

.PHONY:	clean all
all:	$(PROJECT)

OBJ = test.o \
      ata.o \
	  scsi.o \
	  idetask.o \
	  mounter.o

ASMOBJ = endskip.o

SRCS = $(OBJ:%.o=%.c)
SRCS += $(ASMOBJ:%.o=%.S)

$(PROJECT): $(SRCS)
	${CC} -o $@ $(CFLAGS) $(SRCS) $(LDFLAGS)

clean:
	-rm $(PROJECT)
